<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codekul.roshan.listviewexample4customized.MainActivity">

    <ListView
        android:layout_width="0dp"
        android:layout_height="302dp"
        android:layout_marginTop="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/lstList"
        app:layout_constraintHorizontal_bias="0.0"
        android:padding="10dp"
        android:background="#dcedc8"/>

    <EditText
        android:id="@+id/edtxName"
        android:layout_width="131dp"
        android:layout_height="42dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="55dp"
        android:hint="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lstList" />

    <Button
        android:id="@+id/btnAddName"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onAdd"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/edtxName"
        app:layout_constraintLeft_toRightOf="@+id/edtxName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtxName"
        />
</android.support.constraint.ConstraintLayout>
