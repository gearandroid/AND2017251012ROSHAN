<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codekul.roshan.relatedlayoutdemo.MainActivity">

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/btnCenter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:layout_above="@id/btnCenter"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/btnCenter"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:layout_toLeftOf="@id/btnCenter"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/btnCenter"/>




</RelativeLayout>
