<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codekul.roshan.whatsappbyconstraintview.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/bkgrnd">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"></LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:background="#004d40"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linearLayout"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.03"
            android:tint="#e0f2f1"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.05"
            android:tint="#e0f2f1"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="129dp"
            android:layout_height="20dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="17dp"
            android:text="Codekul Contact"
            android:textColor="#fafafa"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:elevation="1dp"
            android:padding="14dp"
            android:tint="#e0f2f1"
            app:srcCompat="@drawable/ic_videocam_black_24dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.03"
            android:adjustViewBounds="false"
            android:tint="#e0f2f1"
            app:srcCompat="@drawable/ic_call_black_24dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="20dp"
            android:layout_weight="0.06"
            android:tint="#e0f2f1"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="302dp"
        android:layout_height="46dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/roundedgerect"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0"
        app:layout_goneMarginBottom="2dp"
        android:id="@+id/linearLayout2"
        android:layout_marginStart="4dp">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_insert_emoticon_black_24dp"
            android:tint="#9e9e9e"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:inputType="textPersonName"
            android:hint="Type a message"
            android:tint="#9e9e9e"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="0dp"
            android:tint="#9e9e9e"
            app:srcCompat="@drawable/ic_attach_file_black_24dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:padding="4dp"
            android:tint="#9e9e9e"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="45dp"
        android:layout_height="49dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:paddingBottom="10dp"
        android:background="@drawable/mic"
        android:padding="11dp"
        android:tint="#fafafa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_mic_black_24dp"
        android:layout_marginRight="4dp" />



</android.support.constraint.ConstraintLayout>
